{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "useDefineForClassFields": true
  },
  "include": [
    "website",
    "src",
    "./declarations.d.ts",
    "./vitest-setup.ts",
    "./vitest.config.ts",
    "website/components/counter.tsx"
  ]
}
